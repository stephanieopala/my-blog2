<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs")%>

<body>
    <%- include("../partials/nav.ejs")%>
    <section>
        <div class="blogs-wrapper">
            <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <div class="blog">
                    <h2><%= blog.title %></h2>
                    <p><%= blog.snippet %></p>
                    <a href="/<%= blog._id%>">Read more</a>
                </div>
                <% }) %>
            <% } else { %>
                <p>No blogs to read</p>
            <% } %>
            
        </div>
        <div class="filter">

        </div>
    </section>
    <%- include("../partials/footer.ejs")%>
</body>
</html>